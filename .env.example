# Server Configuration
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/quizlet-flashcard-generator

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_LIFETIME=1d

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload Limits
MAX_FILE_SIZE_MB=50

# Logging
LOG_LEVEL=info

# Task Processing
TASK_TIMEOUT_MS=300000 