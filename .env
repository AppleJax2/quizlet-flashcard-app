# Server Configuration
NODE_ENV=development
PORT=5001
API_PREFIX=/api/v1

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/quizlet

# JWT Authentication
JWT_SECRET=local_development_secret_key_change_in_production
JWT_LIFETIME=1d

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload Limits
MAX_FILE_SIZE_MB=50

# Logging
LOG_LEVEL=info

# Task Processing
TASK_TIMEOUT_MS=300000 